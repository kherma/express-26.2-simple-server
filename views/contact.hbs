<h2>Contact me</h2>
<div>
  {{#if isSent}}
    The message has been sent!
  {{/if}}
  {{#if isError}}
    You can't leave fields empty!
  {{/if}}
</div>
<form
  action='/contact/send-message'
  method='POST'
  enctype='multipart/form-data'
>
  <label>
    Your name:
    <input type='text' name='author' />
  </label>
  <label>
    Your email:
    <input type='email' name='sender' />
  </label>
  <label>
    Title:
    <input type='text' name='title' />
  </label>
  <label>
    Message:
    <textarea name='message'></textarea>
  </label>
  <label>
    Project design:
    <input
      required
      type='file'
      name='projectDesign'
      accept='.png,.jpg,.jpeg,.gif'
    />
  </label>
  <button type='submit'>Send message</button>
</form>
{{#if isSent}}
  {{#if fileName}}
    <div>File {{fileName}} has been saved!</div>
  {{/if}}
{{/if}}